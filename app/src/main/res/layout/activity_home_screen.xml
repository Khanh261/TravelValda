<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <!-- Declare your ViewModel and other data here -->
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="start"
        android:style="@style/groupStylegray_999"
        android:id="@+id/linearColumnFloatingIcon"
        android:layout_marginTop="@dimen/_7pxv"
        tools:context=".HomePageActivity">

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textAppearance="?attr/textAppearanceHeadline4"
            android:gravity="center"
            android:layout_marginTop="16dp"
            tools:text="Welcome to TravelValda" />

        <!-- Search Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="16dp">

            <EditText
                android:id="@+id/etSearch"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Search hint"
                android:padding="@dimen/_8px"
                tools:hint="Search for hotels, destinations" />

            <Button
                android:id="@+id/btnSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:padding="@dimen/_8px"
                tools:text="Search" />
        </LinearLayout>

        <!-- Featured Hotels -->
        <TextView
            android:id="@+id/tvFeaturedHotels"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Featured Hotel"
            android:textAppearance="?attr/textAppearanceHeadline5"
            android:layout_marginStart="16dp"
            android:layout_marginTop="@dimen/_8px"
            tools:text="Featured Hotels" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Example Hotel Item -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_8px"
                    android:layout_marginBottom="16dp"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:id="@+id/ivHotelImage"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/home"
                        android:scaleType="centerCrop"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/tvHotelName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hotel Name"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:layout_marginTop="@dimen/_8px"
                        tools:text="Hotel Sunshine" />

                    <TextView
                        android:id="@+id/tvHotelLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hotel Location"
                        android:layout_marginTop="4dp"
                        tools:text="Downtown, City" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_8px"
                    android:layout_marginBottom="16dp"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:id="@+id/ivHotelImage4"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/homestay1"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/tvHotelName4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hotel Name"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:layout_marginTop="@dimen/_8px"
                        tools:text="City Central Hotel" />

                    <TextView
                        android:id="@+id/tvHotelLocation4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hotel Location"
                        android:layout_marginTop="4dp"
                        tools:text="City Center, Downtown" />


                </LinearLayout>
                <!-- Repeat Hotel Item as needed -->
            </LinearLayout>


        </ScrollView>

        <!-- Bottom Navigation Bar -->
        <FrameLayout
            android:id="@+id/frameBottomBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:style="@style/groupStyleblack_999cornerRadius">

            <LinearLayout
                android:id="@+id/linearAutoLayoutHor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_13pxv"
                android:layout_marginBottom="@dimen/_39pxv">

                <LinearLayout
                    android:id="@+id/linearAutoLayoutVer0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/imageHome"
                        android:layout_width="@dimen/_19pxh"
                        android:layout_height="@dimen/_20pxh"
                        android:src="@drawable/home_icon"
                        android:scaleType="fitXY"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/txtHome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4pxv"
                        android:layout_marginStart="@dimen/_2pxh"
                        android:layout_marginEnd="@dimen/_2pxh"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:gravity="center_horizontal"
                        android:text="@string/lbl_home"
                        android:style="@style/txtUrbanistRomanBold1"
                        tools:text="@string/lbl_home" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearAutoLayoutVer1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/imageRewind"
                        android:layout_width="@dimen/_18pxh"
                        android:layout_height="@dimen/_19pxh"
                        android:src="@drawable/search_icon"
                        android:scaleType="fitXY"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/txtSearch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3pxv"
                        android:layout_marginStart="@dimen/_2pxh"
                        android:layout_marginEnd="@dimen/_2pxh"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:gravity="center_horizontal"
                        android:text="@string/lbl_search"
                        android:style="@style/txtUrbanistRomanMedium16_2"
                        tools:text="@string/lbl_search" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearAutoLayoutVer2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/imageMegaphone"
                        android:layout_width="@dimen/_16pxh"
                        android:layout_height="@dimen/_18pxh"
                        android:src="@drawable/booking_icon"
                        android:scaleType="fitXY"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/txtBooking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5pxv"
                        android:layout_marginStart="@dimen/_2pxh"
                        android:layout_marginEnd="@dimen/_2pxh"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:gravity="center_horizontal"
                        android:text="@string/lbl_booking"
                        android:style="@style/txtUrbanistRomanMedium16_2"
                        tools:text="@string/lbl_booking" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearAutoLayoutVer3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/imageProfile"
                        android:layout_width="@dimen/_16pxh"
                        android:layout_height="@dimen/_18pxh"
                        android:src="@drawable/profile_icon"
                        android:scaleType="fitXY"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/txtProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4pxv"
                        android:layout_marginStart="@dimen/_2pxh"
                        android:layout_marginEnd="@dimen/_2pxh"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:gravity="center_horizontal"
                        android:text="@string/lbl_profile"
                        android:style="@style/txtUrbanistRomanMedium16_2"
                        tools:text="@string/lbl_profile" />
                </LinearLayout>

            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</layout>
