<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TravelValda"
        tools:targetApi="31">
        <activity
            android:name=".Account.SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".Public.ProfileActivity"
            android:exported="true" />
        <activity
            android:name=".Account.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".DashBoard"
            android:exported="true" />
        <activity
            android:name=".Public.HomePageActivity"
            android:exported="true" />
        <activity
            android:name=".Public.HotelDetailsActivity"
            android:exported="true" />
        <activity
            android:name=".Public.BookingHistoryActivity"
            android:exported="true" />
        <activity
            android:name=".animation.AnimationHandle"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>